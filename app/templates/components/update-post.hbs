{{#if showUpdateForm}}

<center>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=model.author class='form-contol'}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=model.date}}
    </div>

    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title" placeholder=model.title}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea cols='100' rows='20' value=body id="body" placeholder=model.body}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" placeholder=model.category}}
    </div>

    <div class="form-group">
      <label for="image">Image-link:</label>
      {{input value=image id="image" placeholder=model.image}}
    </div>

    <div class="row text-center">
      <button {{action 'updatePost' model}}>Update this post</button>
    </div>
  </form>
</center>
{{else}}
  <button {{action 'showUpdateForm'}}>Update this post</button>

{{/if}}
{{yield}}
