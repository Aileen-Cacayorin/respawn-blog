{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="type">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body"}}
        </div>

        <button {{action 'saveComment'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-default" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
