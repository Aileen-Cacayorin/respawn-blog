<div id="new-post-wrapper" class="container">

  <div class="text-center row">
    <h1>New Post</h1>
  </div>

  <center>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class='form-contol'}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea cols='100' rows='20' value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <div class="form-group">
      <label for="image">Image-link:</label>
      {{input value=image id="image"}}
    </div>

    <div class="row text-center">
      <button {{action 'save'}}>Create Post</button>
    </div>
  </form>
</center>
</div>
