<div id="new-post-wrapper" class="container">

  <div class="text-center row">
    <h1>New Post</h1>
  </div>

  <center>
  <form>
    <div class="form-group">
      <label for="author">Author</label><br>
      {{input value=author id="author" class="custom-form"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label><br>
      {{input value=date id="date" class="custom-form"}}
    </div>

    <div class="form-group">
      <label for="title">Title:</label><br>
      {{input value=title id="title" class="custom-form"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label><br>
      {{textarea cols='100' rows='20' value=body id="body" class="custom-form"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label><br>
      {{input value=category id="category" class="custom-form"}}
    </div>

    <div class="form-group">
      <label for="image">Image-link:</label><br>
      {{input value=image id="image" class="custom-form"}}
    </div>

    <div class="row text-center">
      <button class="btn btn-primary" {{action 'save'}}>Create Post</button>
    </div>
  </form>
</center>
</div>
